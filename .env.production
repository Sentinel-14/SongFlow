# Production Environment Variables for Vercel Deployment

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/songflow?retryWrites=true&w=majority

# Server Configuration
NODE_ENV=production
PORT=5000

# Spotify API (will be updated after getting secure URLs)
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=https://your-app.vercel.app/callback

# CORS Settings
CORS_ORIGIN=https://your-app.vercel.app

# API Base URL
REACT_APP_API_URL=https://your-app.vercel.app/api